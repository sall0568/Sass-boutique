				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.status === 'success') {",
									"    pm.collectionVariables.set(\"token\", jsonData.data.token);",
									"    pm.collectionVariables.set(\"storeId\", jsonData.data.user.storeId);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
